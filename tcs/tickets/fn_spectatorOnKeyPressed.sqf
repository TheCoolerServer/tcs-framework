/**
	Description:	
		KeyDown event handler for the spectator display to handle the backspace key press so that
		the tickets display is also hidden when the spectator display should be.

	Parameters:
		KeyDown display event parameters

	Returns:
		None		
*/

#include "\a3\ui_f\hpp\definedikcodes.inc"

params ["_displayorcontrol", "_key", "_shift", "_ctrl", "_alt"];

if (_key == DIK_BACKSPACE) then {
	if (TCS_var_ticketsDisplayVisible) then {
		[] call TCS_fnc_hideTicketsDisplay;
	} else {
		[] call TCS_fnc_showTicketsDisplay;
	};
};